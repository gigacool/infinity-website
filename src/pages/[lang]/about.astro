---
import type { GetStaticPaths } from 'astro';
import Container from "@/components/container.astro";
import Cta from "@/components/cta.astro";
import Layout from "@/layouts/Layout.astro";
import { languages, getTranslations } from '@/i18n/utils';
import type { Language } from '@/i18n/utils';

export const prerender = true;

export const getStaticPaths = (() => {
  return languages.map((lang) => ({
    params: { lang },
  }));
}) satisfies GetStaticPaths;

const { lang } = Astro.params as { lang: Language };
const t = getTranslations(lang);
---

<Layout lang={lang} title={t.about.title} description={t.about.meta_description}>
  <Container>
    <article class="mx-auto max-w-3xl py-16">

      <!-- Founder Story Section -->
      <section>
        <h1 class="text-4xl lg:text-5xl font-bold tracking-tight text-center">
          {t.about.hero_title}
        </h1>

        <div class="mt-12 space-y-6 text-lg text-slate-700 leading-relaxed">
          <p class="text-xl font-medium text-slate-900">
            {t.about.founder_intro}
          </p>
          <p>{t.about.founder_story_p1}</p>
          <p>{t.about.founder_story_p2}</p>
          <p>{t.about.founder_story_p3}</p>
          <p>{t.about.founder_story_p4}</p>
          <p class="text-slate-900 font-medium italic">
            {t.about.founder_story_p5}
          </p>
        </div>
      </section>

      <!-- Methodology Section -->
      <section class="mt-20">
        <h2 class="text-3xl lg:text-4xl font-bold tracking-tight text-center">
          {t.about.methodology_title}
        </h2>

        <div class="mt-12 space-y-12">
          <!-- Spaced Repetition -->
          <div class="bg-gray-50 rounded-2xl p-8">
            <h3 class="text-xl font-bold text-slate-900">
              {t.about.spaced_repetition_title}
            </h3>
            <p class="mt-3 text-slate-700 leading-relaxed">
              {t.about.spaced_repetition_desc}
            </p>
          </div>

          <!-- Gamification Science -->
          <div class="bg-gray-50 rounded-2xl p-8">
            <h3 class="text-xl font-bold text-slate-900">
              {t.about.gamification_title}
            </h3>
            <p class="mt-3 text-slate-700 leading-relaxed">
              {t.about.gamification_desc}
            </p>
          </div>

          <!-- Adaptive Learning -->
          <div class="bg-gray-50 rounded-2xl p-8">
            <h3 class="text-xl font-bold text-slate-900">
              {t.about.adaptive_title}
            </h3>
            <p class="mt-3 text-slate-700 leading-relaxed">
              {t.about.adaptive_desc}
            </p>
          </div>
        </div>
      </section>

    </article>

    <!-- CTA Section -->
    <Cta lang={lang} />
  </Container>
</Layout>
