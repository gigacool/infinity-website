---
import type { GetStaticPaths } from 'astro';
import Container from "@/components/container.astro";
import Layout from "@/layouts/Layout.astro";
import { languages, getTranslations } from '@/i18n/utils';
import type { Language } from '@/i18n/utils';

export const prerender = true;

export const getStaticPaths = (() => {
  return languages.map((lang) => ({
    params: { lang },
  }));
}) satisfies GetStaticPaths;

const { lang } = Astro.params as { lang: Language };
const t = getTranslations(lang);

// Social share URLs
const siteUrl = `https://noosia.digital/${lang}/beta`;
const shareTextFr = "Je viens de rejoindre la bêta n∞sia ! Enfin une plateforme qui comprend que les compétences bougent vite.";
const shareTextEn = "Just joined the n∞sia beta! Finally a platform that gets it - skills move fast.";
const shareText = lang === 'fr' ? shareTextFr : shareTextEn;

const linkedInShareUrl = `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(siteUrl)}`;
const twitterShareUrl = `https://twitter.com/intent/tweet?text=${encodeURIComponent(shareText)}&url=${encodeURIComponent(siteUrl)}`;
---

<Layout title={t.confirmation.page_title} lang={lang} noindex={true}>
  <Container>
    <div class="min-h-[60vh] flex flex-col items-center justify-center text-center py-16 md:py-24">
      <!-- Success Icon with subtle animation -->
      <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mb-8 animate-bounce-once">
        <svg class="w-10 h-10 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
        </svg>
      </div>

      <!-- Celebration Headline -->
      <h1 class="text-4xl md:text-5xl font-bold text-noosia-dark mb-4">
        {t.confirmation.headline}
      </h1>
      <p class="text-xl text-gray-600 mb-8 max-w-lg">
        {t.confirmation.subheadline}
      </p>

      <!-- Timeline Box -->
      <div class="bg-orange-50 border border-orange-200 rounded-lg p-6 mb-10 max-w-md">
        <p class="text-lg font-semibold text-noosia-dark">
          {t.confirmation.timeline}
        </p>
      </div>

      <!-- What Happens Next -->
      <div class="mb-12 max-w-lg">
        <h2 class="text-xl font-semibold text-noosia-dark mb-6">
          {t.confirmation.what_next}
        </h2>
        <ul class="text-left space-y-4 text-gray-600">
          <li class="flex items-start gap-3">
            <span class="text-noosia-orange font-bold text-lg flex-shrink-0">✓</span>
            <span>{t.confirmation.expect_email}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-noosia-orange font-bold text-lg flex-shrink-0">✓</span>
            <span>{t.confirmation.expect_dashboard}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-noosia-orange font-bold text-lg flex-shrink-0">✓</span>
            <span>{t.confirmation.expect_feedback}</span>
          </li>
        </ul>
      </div>

      <!-- Social Share Section -->
      <div class="border-t border-gray-200 pt-8 w-full max-w-md">
        <p class="text-gray-600 mb-4">{t.confirmation.share_prompt}</p>
        <div class="flex justify-center gap-4">
          <a
            href={linkedInShareUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-4 py-2 bg-[#0077b5] text-white rounded-lg hover:bg-[#005885] transition-colors"
            aria-label={lang === 'fr' ? 'Partager sur LinkedIn' : 'Share on LinkedIn'}
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            LinkedIn
          </a>
          <a
            href={twitterShareUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-4 py-2 bg-black text-white rounded-lg hover:bg-gray-800 transition-colors"
            aria-label={lang === 'fr' ? 'Partager sur X' : 'Share on X'}
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
            X
          </a>
        </div>
      </div>

      <!-- Return Home Link -->
      <a
        href={`/${lang}/`}
        class="mt-10 text-noosia-orange hover:underline font-medium"
      >
        {t.confirmation.return_home}
      </a>
    </div>
  </Container>
</Layout>

<style>
  @media (prefers-reduced-motion: no-preference) {
    .animate-bounce-once {
      animation: bounce-once 0.6s ease-out;
    }

    @keyframes bounce-once {
      0%, 100% { transform: translateY(0); }
      40% { transform: translateY(-12px); }
      60% { transform: translateY(-6px); }
    }
  }
</style>
