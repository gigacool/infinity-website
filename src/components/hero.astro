---
import { Picture } from "astro:assets";
import heroImage from "@/assets/hero.png";
import Link from "@/components/ui/link.astro";
import { getTranslations, defaultLang } from "@/i18n/utils";
import type { Language } from "@/i18n/utils";

interface Props {
  lang?: Language;
}

const { lang = defaultLang } = Astro.props;
const t = getTranslations(lang);
---

<main class="pt-16 pb-8 md:pt-12 md:pb-24 text-center">
  <p class="text-sm font-semibold uppercase tracking-wider text-infinity-orange mb-4">
    {t.hero.tagline}
  </p>
  <h1 class="text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter text-infinity-dark max-w-4xl mx-auto">
    {t.hero.title}
  </h1>
  <p class="text-lg mt-6 text-slate-600 max-w-2xl mx-auto">
    {t.hero.subtitle}
  </p>
  <div class="mt-8 flex flex-col sm:flex-row gap-3 justify-center">
    <Link
      href={`/${lang}/beta`}
      class="flex gap-1 items-center justify-center bg-infinity-orange hover:bg-orange-600">
      {t.cta.start_free}
    </Link>
    <Link
      size="lg"
      style="outline"
      href={`/${lang}/beta`}
      class="flex gap-1 items-center justify-center">
      {t.cta.for_teams}
    </Link>
  </div>
  <p class="mt-6 text-sm text-slate-500">
    {t.hero.trust_signal}
  </p>
  <div class="py-12 md:py-16">
    <Picture
      src={heroImage}
      alt="Infinity Platform Dashboard"
      widths={[400, 600, 800]}
      sizes="(max-width: 800px) 100vw, 800px"
      loading="eager"
      format="avif"
      class="mx-auto rounded-xl shadow-lg"
    />
  </div>
</main>
