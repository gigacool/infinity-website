---
import Link from "@/components/ui/link.astro";
import TrustSignals from "@/components/TrustSignals.astro";
import MockupFrame from "@/components/MockupFrame.astro";
import { getTranslations, defaultLang } from "@/i18n/utils";
import type { Language } from "@/i18n/utils";

interface Props {
  lang?: Language;
}

const { lang = defaultLang } = Astro.props;
const t = getTranslations(lang);
---

<section class="pt-16 pb-8 md:pt-12 md:pb-24 text-center">
  <p class="text-sm font-semibold uppercase tracking-wider text-infinity-orange mb-4">
    {t.hero.tagline}
  </p>
  <h1 class="text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter text-infinity-dark max-w-4xl mx-auto">
    {t.hero.title}
  </h1>
  <p class="text-lg mt-6 text-slate-600 max-w-2xl mx-auto">
    {t.hero.subtitle}
  </p>
  <div class="mt-8 flex flex-col sm:flex-row gap-3 justify-center">
    <Link
      size="xl"
      style="primary"
      href={`/${lang}/beta`}
      class="flex gap-1 items-center justify-center">
      {t.cta.start_free}
    </Link>
    <Link
      size="xl"
      style="outline"
      href={`/${lang}/beta`}
      class="flex gap-1 items-center justify-center">
      {t.cta.for_teams}
    </Link>
  </div>
  <div class="mt-6">
    <TrustSignals lang={lang} />
  </div>
  <div class="py-12 md:py-16 flex justify-center">
    <MockupFrame alt="Infinity Platform Dashboard showing badges, tokens, and streak achievements" />
  </div>
</section>
