---
import Container from "@/components/container.astro";
import BrandName from "@/components/BrandName.astro";
import Dropdown from "./dropdown.astro";
import LanguageToggle from "@/components/LanguageToggle.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import { getTranslations, getCurrentLang } from "@/i18n/utils";
import type { Language } from "@/i18n/utils";

interface Props {
  lang?: Language;
}

const { lang: propLang } = Astro.props;
const lang = propLang || getCurrentLang(Astro.url);
const t = getTranslations(lang);
const currentPath = Astro.url.pathname;

const menuitems = [
  {
    title: t.nav.features,
    path: `/${lang}/features`,
  },
  {
    title: t.nav.pricing,
    path: `/${lang}/pricing`,
  },
  {
    title: t.nav.about,
    path: `/${lang}/about`,
  },
  {
    title: t.nav.blog,
    path: `/${lang}/blog`,
  },
  {
    title: t.nav.contact,
    path: `/${lang}/contact`,
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href={`/${lang}/`} class="flex items-end gap-1" aria-label="Noosia - Home">
          <BrandName height={36} />
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                    lang={lang}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 items-center text-noosia-dark hover:text-noosia-orange transition-colors">
                      <span>{item.title}</span>
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
        <!-- Mobile menu bottom section -->
        <div class="lg:hidden flex flex-col items-start mt-4 pt-4 border-t border-gray-200 gap-3">
          <LanguageToggle currentLang={lang} currentPath={currentPath} />
          <a
            href={`/${lang}/beta`}
            class="text-noosia-dark hover:text-noosia-orange transition-colors"
          >
            {t.cta.for_teams}
          </a>
          <a
            href={`/${lang}/beta`}
            class="bg-noosia-orange text-white px-4 py-2 text-sm rounded-md hover:bg-orange-600 transition-colors w-full text-center"
          >
            {t.cta.start_free}
          </a>
        </div>
      </MenuItems>
    </Astronav>
    <!-- Desktop right section -->
    <div class="hidden lg:flex items-center gap-4">
      <LanguageToggle currentLang={lang} currentPath={currentPath} />
      <a
        href={`/${lang}/beta`}
        class="text-noosia-dark hover:text-noosia-orange transition-colors"
      >
        {t.cta.for_teams}
      </a>
      <a
        href={`/${lang}/beta`}
        class="bg-noosia-orange text-white px-4 py-2 text-sm rounded-md hover:bg-orange-600 transition-colors"
      >
        {t.cta.start_free}
      </a>
    </div>
  </header>
</Container>
