---
import { getTranslations, defaultLang } from "@/i18n/utils";
import type { Language } from "@/i18n/utils";

interface Props {
  lang?: Language;
}

const { lang = defaultLang } = Astro.props;
const t = getTranslations(lang);
---

<div
  class="bg-noosia-dark p-8 md:px-20 md:py-20 mt-20 mx-auto max-w-5xl rounded-lg flex flex-col items-center text-center">
  <h2 class="text-white text-3xl md:text-4xl lg:text-5xl tracking-tight font-bold">
    {t.cta.join_beta}
  </h2>
  <p class="text-slate-300 mt-4 text-lg md:text-xl max-w-xl">
    {t.hero.trust_signal}
  </p>
  <div class="flex mt-8">
    <a
      href={`/${lang}/beta`}
      class="bg-noosia-orange text-white px-6 py-3 rounded-full font-semibold hover:bg-orange-600 transition-colors"
    >
      {t.cta.start_free}
    </a>
  </div>
</div>
