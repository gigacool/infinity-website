---
import Link from "./ui/link.astro";
import { getTranslations, defaultLang } from "@/i18n/utils";
import type { Language } from "@/i18n/utils";

interface Props {
  lang?: Language;
}

const { lang = defaultLang } = Astro.props;
const t = getTranslations(lang);
---

<div
  class="bg-infinity-dark p-8 md:px-20 md:py-20 mt-20 mx-auto max-w-5xl rounded-lg flex flex-col items-center text-center">
  <h2 class="text-white text-3xl md:text-4xl lg:text-5xl tracking-tight font-bold">
    {t.cta.join_beta}
  </h2>
  <p class="text-slate-300 mt-4 text-lg md:text-xl max-w-xl">
    {t.hero.trust_signal}
  </p>
  <div class="flex mt-8">
    <Link href={`/${lang}/beta`} style="inverted" class="bg-infinity-orange hover:bg-orange-600 text-white">
      {t.cta.start_free}
    </Link>
  </div>
</div>
