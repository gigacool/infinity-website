---
import Container from "@/components/container.astro";
import Layout from "./Layout.astro";
import { getTranslations } from "@/i18n/utils";
import type { Language } from "@/i18n/utils";

interface Props {
  title: string;
  description: string;
  date: Date;
  author: string;
  category: string;
  tags: string[];
  lang: Language;
  pageUrl: string;
}

const { title, description, date, author, category, tags, lang, pageUrl } = Astro.props;
const t = getTranslations(lang);

const formattedDate = date.toLocaleDateString(lang === 'fr' ? 'fr-FR' : 'en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const linkedInUrl = `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(pageUrl)}`;
const twitterUrl = `https://twitter.com/intent/tweet?url=${encodeURIComponent(pageUrl)}&text=${encodeURIComponent(title)}`;
---

<Layout lang={lang} title={title} description={description}>
  <Container>
    <article class="mx-auto max-w-3xl mt-14 mb-16">
      <header>
        <span class="text-sm font-medium text-infinity-orange uppercase tracking-wider">
          {category}
        </span>
        <h1 class="text-4xl lg:text-5xl font-bold lg:tracking-tight mt-2 lg:leading-tight">
          {title}
        </h1>
        <div class="flex gap-2 mt-3 items-center flex-wrap md:flex-nowrap text-gray-400">
          <span>{author}</span>
          <span>&middot;</span>
          <time datetime={date.toISOString()}>
            {formattedDate}
          </time>
          <span class="hidden md:block">&middot;</span>
          <div class="w-full md:w-auto flex flex-wrap gap-3">
            {tags.map((tag) => (
              <span class="text-sm text-gray-500">#{tag}</span>
            ))}
          </div>
        </div>

        <!-- Social share -->
        <div class="flex gap-4 items-center mt-4 pt-4 border-t border-gray-100">
          <span class="text-sm text-gray-500">{t.blog_post.share}:</span>
          <a
            href={linkedInUrl}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={t.blog_post.share_linkedin}
            class="text-gray-400 hover:text-infinity-orange transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a
            href={twitterUrl}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={t.blog_post.share_twitter}
            class="text-gray-400 hover:text-infinity-orange transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
        </div>
      </header>

      <div class="prose prose-lg mt-8 max-w-none prose-headings:text-slate-900 prose-a:text-infinity-orange prose-a:no-underline prose-a:hover:underline">
        <slot />
      </div>

      <footer class="mt-12 pt-6 border-t border-gray-200">
        <div class="text-center">
          <a
            href={`/${lang}/blog`}
            class="inline-block bg-gray-100 px-5 py-3 rounded-md hover:bg-gray-200 transition text-sm font-medium"
          >
            &larr; {t.blog.back_to_blog}
          </a>
        </div>
      </footer>
    </article>

    <!-- Related posts slot -->
    <slot name="related" />
  </Container>
</Layout>
